@inherits TaskPostBase


<MudDialog>
    <DialogContent>
		<MudForm Model="@model" @ref="@form" Validation="@(taskValidator.ValidateValue)" ValidationDelay="0">
		<MudCardContent>
				<MudTextField @bind-Value="model.Title"                              
							  For="@(() => model.Title)"
							  Immediate="true"
							  Label="Title" />

				<MudDatePicker @bind-Date="model.DueDate"
							   IsDateDisabledFunc="@((DateTime dt)=>( dt.Date < DateTime.Now.Date ))"
							   Label="Due Date" />

				<MudTextField @bind-Value="model.Description"
							  For="@(() => model.Description)"
							  Immediate="true"
							  Label="Description" />
		</MudCardContent>
		<MudCardContent Class="pa-0">
		</MudCardContent>
	</MudForm>
	</DialogContent>
	<DialogActions>
		<MudButton OnClick="Cancel">Cancel</MudButton>
		<MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="Submit">Create</MudButton>
	</DialogActions>
    </MudDialog>